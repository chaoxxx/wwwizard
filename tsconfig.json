{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@share/*": ["share/*"] // 保持与主配置一致的路径别名
    }    
  },
  "include": ["src", "share/**/*"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
